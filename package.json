{
  "name": "webpack-with-SSR-and-CSR",
  "version": "1.0.2",
  "description": "React Server side and Client side rendering with webpack",
  "main": "index.js",
  "scripts": {
    "client:dev": "webpack-dev-server --config webpack.config.client.js",
    "client:build": "webpack --config webpack.config.client.js",
    "server:build": "webpack --config webpack.config.server.js",
    "server:dev": "nodemon --watch build --exec \"node build/server.js \" ",
    "server": "npm-run-all server:dev server:build",
    "client": "npm run client:dev",
    "start": "npm-run-all --parallel client:dev server:build server:dev"
  },
  "author": "RaseL Mahmud",
  "license": "",
  "dependencies": {
    "@babel/polyfill": "^7.4.4",
    "@babel/runtime": "^7.5.5",
    "axios": "^0.19.0",
    "concurrently": "^5.0.1",
    "express": "^4.17.1",
    "express-http-proxy": "^1.6.0",
    "http-proxy-middleware": "^0.20.0",
    "nodemon": "^2.0.1",
    "npm-run-all": "^4.1.5",
    "react": "^16.9.0",
    "react-bootstrap": "^1.0.0-beta.16",
    "react-dom": "^16.9.0",
    "react-redux": "^7.1.0",
    "react-router-config": "^5.1.1",
    "react-router-dom": "^5.0.1",
    "redux": "^4.0.4",
    "redux-thunk": "^2.3.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.5.5",
    "@babel/core": "^7.7.5",
    "@babel/node": "^7.7.4",
    "@babel/plugin-proposal-class-properties": "^7.5.5",
    "@babel/plugin-transform-react-jsx": "^7.3.0",
    "@babel/plugin-transform-runtime": "^7.5.5",
    "@babel/plugin-transform-spread": "^7.2.2",
    "@babel/preset-env": "^7.5.5",
    "@babel/preset-react": "^7.0.0",
    "@babel/register": "^7.5.5",
    "babel-loader": "^8.0.6",
    "babel-watch": "^7.0.0",
    "clean-webpack-plugin": "^3.0.0",
    "css-loader": "^3.2.0",
    "extract-text-webpack-plugin": "^1.0.1",
    "file-loader": "^4.2.0",
